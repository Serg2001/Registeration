@page "/nextstep-otherpupil"
@rendermode InteractiveServer

@using MudBlazor
@using Registeration.DTOs
@using Registeration.Services
@inject NavigationManager Navigation
@inject IEmailService EmailService
@inject FormStateService FormStateService

<PageTitle>Գրանցման Հաստատում</PageTitle>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        background: radial-gradient(circle at center, #e4d9f9, #ffffff);
        background-attachment: fixed;
        background-repeat: no-repeat;
        overflow-x: hidden;
    }

    .blurred-bubbles {
        position: absolute;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        z-index: -1;
    }

    .bubble {
        position: absolute;
        border-radius: 50%;
        background: #b58df1;
        filter: blur(90px);
        opacity: 0.7;
    }

    .bubble1 {
        top: 10%;
        left: 5%;
        width: 300px;
        height: 300px;
    }

    .bubble2 {
        top: 30%;
        left: 60%;
        width: 400px;
        height: 400px;
    }

    .bubble3 {
        bottom: 10%;
        left: 30%;
        width: 500px;
        height: 500px;
    }

    .centered-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 2rem;
    }

    .form-box {
        background-color: rgba(255, 255, 255, 0.85);
        padding: 3rem;
        border-radius: 20px;
        max-width: 600px;
        width: 100%;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        backdrop-filter: blur(10px);
    }

    .form-title {
        font-size: 2rem;
        font-weight: bold;
        color: #6a1b9a;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .form-description {
        font-size: 1rem;
        text-align: center;
        color: #333;
        margin-bottom: 2rem;
    }

    .form-button {
        background-color: #6a1b9a;
        color: white;
        font-weight: bold;
    }
</style>

<div class="blurred-bubbles">
    <div class="bubble bubble1"></div>
    <div class="bubble bubble2"></div>
    <div class="bubble bubble3"></div>
</div>

<div class="centered-container">
    <div class="form-box">
        <div class="form-title">✔ Հաջողությամբ գրանցվեցիք</div>

        <div class="form-description">
            Հաստատման համար մուտք գործեք ձեր նշած էլ․ հասցեն։
        </div>

        <MudDivider Class="my-4" />

        <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/">
            Վերադառնալ Գլխավոր Էջ
        </MudButton>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        var model = FormStateService.OtherPupilFormModel;

        if (model == null || model.Id == Guid.Empty)
        {
            Console.WriteLine("❌ No OtherPupilDTO found in FormStateService.");
            return;
        }

        try
        {
            var baseUrl = Navigation.BaseUri.TrimEnd('/');
            var confirmationLink = $"{baseUrl}/confirm-otherpupil?id={model.Id}";

            string emailBody = $@"
                <h3>Բարև Ձեզ, {model.Name} {model.SurName}</h3>
                <p>Շնորհակալություն գրանցման համար։</p>
                <p>Դիտել ձեր գրանցման տվյալները՝ <a href=""{confirmationLink}"">Հաստատման էջ</a></p>";

            Console.WriteLine("📧 Sending to: " + model.ParentsEmail);
            await EmailService.SendEmailAsync(model.ParentsEmail, "Գրանցման Հաստատում", emailBody);
            Console.WriteLine("✅ Email sent successfully");
        }
        catch (Exception ex)
        {
            Console.WriteLine("❌ Error sending confirmation email: " + ex.Message);
            if (ex.InnerException != null)
                Console.WriteLine("Inner: " + ex.InnerException.Message);
        }
    }
}
